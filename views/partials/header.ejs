<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand">
                <h2 class="d-inline-block mx-5" id="nav-title">Health Up</h2>
            </a>
            
            <% if(loggedIn == false){ %>
                <div class="d-inline-flex flex-row-reverse nav-btn-container">
                    <button onclick="location.href = '/login'" class="btn btn-outline-primary mx-2">LOGIN</button>
                    <button onclick="location.href = '/register'" class="btn btn-outline-primary mx-2">REGISTER</button>
                </div>
            <% } else{ %>
                
                <div class="d-inline-flex p-2 bd-highlight">
                    <div class="d-inline-flex flex-row-reverse nav-btn-container">
                        <button onclick="load_add_data()" class="btn btn-outline-primary mx-2">ADD DATA</button>
                    </div>

                    <div class="d-inline-flex flex-row-reverse nav-btn-container">
                        <button id="load_stats_btn" onclick="load_stats_page()" class="btn btn-outline-primary mx-2">SHOW STATS</button>
                    </div>
                    <div class="d-inline-flex flex-row-reverse nav-btn-container">
                        <button id="load_medicine_page" onclick="load_medicine_page()" class="btn btn-outline-primary mx-2">MEDICINE DATA</button>
                    </div>
                    
                    <div class="d-inline-flex flex-row-reverse nav-btn-container">
                        <button onclick="location.href = '/logout'" class="btn btn-outline-primary mx-2">LOGOUT</button>
                    </div>
                </div>
            <% } %>
        
        </div>
     </nav>